<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date createdAt}}</p>
  <p>
    <button class="btn btn-primary">Read More</button>
  </p>
</div>

<hr>

<h3>Comments</h3>
{{#each comments}}
<div class="comment">
  <p>{{content}}</p>
  <p>Commented by {{user.name}} on {{format_date createdAt}}</p>
</div>
{{/each}}

<hr>

<div class="comment-form">
  <form id="comment-form">
    <div class="form-group">
      <label for="comment-content">Add a comment:</label>
      <textarea class="form-control" id="comment-content" rows="3" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>