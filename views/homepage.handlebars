<!-- Loop over each object in the projects array -->
{{#each blogPosts as |blogPost| }}
<div class="row mb-4 blogpost">
  <div class="col-md-5">
    <h2>
      <a href="/blog/{{blogPost.id}}">{{blogPost.title}}</a>
    </h2>
    <p>Created by {{blogPost.user.name}} on {{format_date blogPost.createdAt}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{blogPost.content}}
    </p>
  </div>
  <div class="col-md-12">
    <h3>Comments:</h3>
    {{#each blogPost.comments as |comment|}}
      <div class="comment">
        <p>{{comment.content}}</p>
        <p>Commented by {{comment.user.name}} on {{format_date comment.createdAt}}</p>
      </div>
    {{/each}}
  </div>
</div>
{{/each}}
